@model List<StajyerPlatformu.Models.Message>

@{
    ViewData["Title"] = "Gelen Kutusu";
}

<div class="container py-4">
    <h2 class="mb-3">Gelen Kutusu</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (!Model.Any())
    {
        <p class="text-muted">Henüz mesajınız yok.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var m in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fw-bold">@m.Sender.FirstName @m.Sender.LastName</div>
                        <div class="small text-muted">@m.Subject ?? "(Başlık yok)"</div>
                        <div>@m.Content</div>
                    </div>
                    <span class="small text-muted">@m.SentAt.ToString("g")</span>
                </div>
            }
        </div>
    }
</div>


