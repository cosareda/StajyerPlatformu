@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                <p class="text-muted text-center mb-4">Email adresinizi girin, size şifre sıfırlama linki gönderelim.</p>
                
                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Adresi</label>
                        <input type="email" name="email" id="email" class="form-control" required placeholder="ornek@email.com" />
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-envelope me-2"></i>Şifre Sıfırlama Linki Gönder
                        </button>
                    </div>
                    
                    <div class="mt-3 text-center">
                        <a asp-action="Login"><i class="bi bi-arrow-left me-1"></i>Giriş sayfasına dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





