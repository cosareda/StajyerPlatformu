@model List<string>

@{
    ViewData["Title"] = "Sistem Logları";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Sistem Logları (Serilog)</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
    </div>

    <div class="card bg-dark text-white font-monospace shadow-sm">
        <div class="card-body overflow-auto" style="max-height: 500px; font-size: 0.85rem;">
            @if (Model != null && Model.Any())
            {
                foreach (var line in Model)
                {
                    <div class="border-bottom border-secondary py-1 text-break">@line</div>
                }
            }
            else
            {
                <div class="text-muted p-3">Henüz kaydedilmiş log bulunmuyor.</div>
            }
        </div>
    </div>
</div>
