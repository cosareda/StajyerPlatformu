@model IEnumerable<StajyerPlatformu.Models.Application>

@{
    ViewData["Title"] = "Başvuru Yönetimi";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Başvuru Yönetimi</h2>
        <div>
            <a asp-action="ExportApplicationsExcel" class="btn btn-success">
                <i class="bi bi-file-earmark-excel"></i> Excel İndir
            </a>
            <a asp-action="ExportApplicationsPdf" class="btn btn-warning">
                <i class="bi bi-file-earmark-pdf"></i> PDF İndir
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <p class="text-muted mb-3">Toplam Başvuru: <strong>@Model.Count()</strong></p>
            
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>İlan</th>
                            <th>İşveren</th>
                            <th>Aday</th>
                            <th>Üniversite/Bölüm</th>
                            <th>Başvuru Tarihi</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var app in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@app.InternshipPost.Title</strong><br>
                                    <small class="text-muted">@app.InternshipPost.City - @app.InternshipPost.WorkType</small>
                                </td>
                                <td>@app.InternshipPost.EmployerProfile?.CompanyName</td>
                                <td>
                                    <strong>@app.InternProfile.AppUser.FirstName @app.InternProfile.AppUser.LastName</strong><br>
                                    <small class="text-muted">@app.InternProfile.AppUser.Email</small>
                                </td>
                                <td>
                                    @app.InternProfile.University<br>
                                    <small class="text-muted">@app.InternProfile.Department</small>
                                </td>
                                <td>@app.ApplicationDate.ToShortDateString()</td>
                                <td>
                                    @switch (app.Status)
                                    {
                                        case StajyerPlatformu.Models.ApplicationStatus.Pending:
                                            <span class="badge bg-warning">Beklemede</span>
                                            break;
                                        case StajyerPlatformu.Models.ApplicationStatus.InReview:
                                            <span class="badge bg-info">İnceleniyor</span>
                                            break;
                                        case StajyerPlatformu.Models.ApplicationStatus.Accepted:
                                            <span class="badge bg-success">Kabul</span>
                                            break;
                                        case StajyerPlatformu.Models.ApplicationStatus.Rejected:
                                            <span class="badge bg-danger">Reddedildi</span>
                                            break;
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Geri Dön</a>
    </div>
</div>

