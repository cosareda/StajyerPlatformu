@model IEnumerable<StajyerPlatformu.Models.AppUser>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    var usersWithRoles = ViewBag.UsersWithRoles as List<dynamic> ?? new List<dynamic>();
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Kullanıcı Yönetimi</h2>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Geri Dön</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Onay Durumu</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in usersWithRoles)
                        {
                            var user = item.User as StajyerPlatformu.Models.AppUser;
                            var roles = item.Roles as IList<string>;
                            <tr>
                                <td>
                                    <strong>@user.FirstName @user.LastName</strong>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @foreach (var role in roles)
                                    {
                                        <span class="badge bg-primary me-1">@role</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsApproved)
                                    {
                                        <span class="badge bg-success">Onaylı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Onay Bekliyor</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToShortDateString()</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                Rol Değiştir
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form asp-action="ChangeUserRole" method="post" class="d-inline">
                                                        <input type="hidden" name="userId" value="@user.Id" />
                                                        <input type="hidden" name="role" value="Admin" />
                                                        <button type="submit" class="dropdown-item">Admin</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-action="ChangeUserRole" method="post" class="d-inline">
                                                        <input type="hidden" name="userId" value="@user.Id" />
                                                        <input type="hidden" name="role" value="Employer" />
                                                        <button type="submit" class="dropdown-item">İşveren</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-action="ChangeUserRole" method="post" class="d-inline">
                                                        <input type="hidden" name="userId" value="@user.Id" />
                                                        <input type="hidden" name="role" value="Intern" />
                                                        <button type="submit" class="dropdown-item">Stajyer</button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                        @if (!user.IsApproved)
                                        {
                                            <form asp-action="ApproveUser" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-success">Onayla</button>
                                            </form>
                                        }
                                        <form asp-action="DeleteUser" method="post" class="d-inline" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
