@model StajyerPlatformu.Models.InternshipPost

@{
    ViewData["Title"] = "Yeni İlan Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
                <div class="card-header bg-primary text-white p-4 border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 fw-bold"><i class="bi bi-briefcase-fill me-2"></i> Yeni Staj İlanı Oluştur</h4>
                        <a asp-action="Index" class="btn btn-sm btn-outline-light rounded-pill"><i class="bi bi-x-lg"></i> İptal</a>
                    </div>
                </div>
                <div class="card-body p-5">
                    <p class="text-muted mb-4">Aradığınız stajyeri bulmak için ilan detaylarını eksiksiz doldurun.</p>
                    
                    <form asp-action="CreatePost" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold text-dark">İlan Başlığı <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-tag"></i></span>
                                <input asp-for="Title" class="form-control border-start-0 ps-0 bg-light" placeholder="Örn: Yazılım Stajyeri, Pazarlama Asistanı..." />
                            </div>
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold text-dark">İlan Detayları & Aranan Nitelikler <span class="text-danger">*</span></label>
                            <textarea asp-for="Description" class="form-control bg-light" rows="8" placeholder="İş tanımı, beklenen özellikler ve stajyerin kazanımları hakkında detaylı bilgi verin..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Deadline" class="form-label fw-bold text-dark">Son Başvuru Tarihi <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-calendar-event"></i></span>
                                <input asp-for="Deadline" class="form-control border-start-0 ps-0 bg-light" type="date" />
                            </div>
                            <span asp-validation-for="Deadline" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="City" class="form-label fw-bold text-dark">Şehir <span class="text-danger">*</span></label>
                                <input asp-for="City" class="form-control bg-light" placeholder="Örn: İstanbul" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="WorkType" class="form-label fw-bold text-dark">Çalışma Türü</label>
                                <select asp-for="WorkType" class="form-select bg-light">
                                    <option value="Ofis">Ofis</option>
                                    <option value="Remote">Remote</option>
                                    <option value="Hibrit">Hibrit</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Duration" class="form-label fw-bold text-dark">Staj Süresi</label>
                                <input asp-for="Duration" class="form-control bg-light" placeholder="Örn: 20 İş Günü" />
                            </div>

                            <div class="col-md-12 mb-4 d-flex align-items-center">
                                <div class="form-check form-switch mt-4 ms-2">
                                    <input class="form-check-input" type="checkbox" asp-for="IsActive" checked style="width: 3em; height: 1.5em;">
                                    <label class="form-check-label ms-2 mt-1 fw-bold" asp-for="IsActive">
                                        İlanı hemen yayınla
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4 pt-3">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm fw-bold">
                                <i class="bi bi-send-fill me-2"></i> İlanı Yayınla
                            </button>
                        </div>
                    </form>
                </div>
            </div>
             <div class="text-center mt-3">
                <small class="text-muted"><i class="bi bi-info-circle"></i> İlanınız yayınlandıktan sonra işveren panelinden düzenleyebilirsiniz.</small>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
