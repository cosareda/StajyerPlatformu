@model StajyerPlatformu.Models.InternProfile

@{
    ViewData["Title"] = "Aday Detayı";
}

<div class="container py-4">
    <a href="javascript:history.back()" class="btn btn-outline-secondary mb-4"><i class="bi bi-arrow-left"></i> Geri Dön</a>

    <div class="row">
        <!-- Sidebar Profile Card -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body text-center pt-5 pb-4">
                     <div class="mx-auto mb-4 position-relative" style="width: 150px;">
                        @if (string.IsNullOrEmpty(Model.ProfilePhotoPath))
                        {
                             <img src="https://ui-avatars.com/api/?name=@(Model.AppUser.FirstName + "+" + Model.AppUser.LastName)&size=150" class="rounded-circle img-thumbnail shadow-sm" alt="Profile" />
                        }
                        else
                        {
                            <img src="@Model.ProfilePhotoPath" class="rounded-circle img-thumbnail shadow-sm" style="width: 150px; height: 150px; object-fit: cover;" alt="Profile" />
                        }
                    </div>
                    <h4 class="fw-bold mb-1">@Model.AppUser.FirstName @Model.AppUser.LastName</h4>
                    <p class="text-muted mb-3">@Model.University</p>
                    <div class="d-flex justify-content-center gap-2 mb-3">
                         @if(!string.IsNullOrEmpty(Model.LinkedIn)) {
                            <a href="@Model.LinkedIn" target="_blank" class="btn btn-sm btn-outline-primary rounded-pill"><i class="bi bi-linkedin"></i> LinkedIn</a>
                        }
                        <a href="mailto:@Model.AppUser.Email" class="btn btn-sm btn-outline-secondary rounded-pill"><i class="bi bi-envelope"></i> Email</a>
                    </div>
                    <a asp-controller="Messages"
                       asp-action="Create"
                       asp-route-receiverId="@Model.AppUserId"
                       asp-route-subject="İlan başvurunuz hakkında"
                       class="btn btn-sm btn-success rounded-pill mb-3">
                        <i class="bi bi-chat-dots"></i> Mesaj Gönder
                    </a>
                    @if(!string.IsNullOrEmpty(Model.ResumePath)) {
                        <a href="@Model.ResumePath" target="_blank" class="btn btn-primary w-100 rounded-pill"><i class="bi bi-file-earmark-pdf"></i> CV İndir</a>
                    }
                    else
                    {
                        <button type="button" class="btn btn-secondary w-100 rounded-pill disabled" title="CV Yüklenmemiş">
                            <i class="bi bi-file-earmark-x"></i> CV Bulunamadı
                        </button>
                    }
                </div>
            </div>
            
             <div class="card border-0 shadow-sm">
                 <div class="card-body">
                     <h6 class="fw-bold mb-3">Kişisel Bilgiler</h6>
                     <ul class="list-unstyled mb-0">
                         <li class="mb-2"><small class="text-muted d-block">Bölüm</small> @Model.Department</li>
                         <li class="mb-2"><small class="text-muted d-block">Sınıf</small> @Model.Grade</li>
                         <li class="mb-2"><small class="text-muted d-block">Cinsiyet</small> @Model.Gender</li>
                         <li class="mb-0"><small class="text-muted d-block">Doğum Tarihi</small> @Model.BirthDate?.ToShortDateString()</li>
                     </ul>
                 </div>
             </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Deneyim Geçmişi</h5>
                    @if (Model.Experiences.Any())
                    {
                        <div class="timeline">
                            @foreach(var exp in Model.Experiences.OrderByDescending(e => e.StartDate))
                            {
                                <div class="d-flex mb-4">
                                    <div class="flex-shrink-0 me-3">
                                        <div class="bg-light rounded p-3 text-center" style="width: 60px; height: 60px; display:flex; align-items:center; justify-content:center;">
                                            <i class="bi bi-briefcase fs-4 text-primary"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <h6 class="fw-bold mb-1">@exp.Title</h6>
                                        <p class="text-muted small mb-2">@exp.CompanyName • @exp.StartDate.ToShortDateString() - @(exp.EndDate.HasValue ? exp.EndDate.Value.ToShortDateString() : "Halen")</p>
                                        <p class="mb-0 text-secondary">@exp.Description</p>
                                        <span class="badge bg-light text-dark mt-2">@exp.TotalHours Saat</span>
                                    </div>
                                </div>
                            }
                        </div>
                    } 
                    else 
                    {
                         <div class="text-center py-5 text-muted bg-light rounded-3">
                             <i class="bi bi-journal-x display-4 mb-3"></i>
                             <p>Bu aday henüz deneyim bilgisi girmemiş.</p>
                         </div>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Yetenekler</h5>
                    @if (!string.IsNullOrEmpty(Model.Skills))
                    {
                        var skills = Model.Skills.Split(',', StringSplitOptions.RemoveEmptyEntries);
                         <div>
                            @foreach (var skill in skills)
                            {
                                <span class="badge bg-primary bg-opacity-10 text-primary me-2 mb-2 px-3 py-2 rounded-pill border border-primary border-opacity-10">@skill.Trim()</span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Yetenek bilgisi girilmemiş.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
